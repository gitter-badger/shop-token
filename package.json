{
  "name": "shop-token",
  "version": "1.0.0",
  "description": "Smart contracts for SHOP token and dutch auction public token event",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShoppersShop/shop-token"
  },
  "scripts": {
    "build": "truffle compile",
    "coverage": "solidity-coverage",
    "coveralls": "solidity-coverage && cat coverage/lcov.info | coveralls",
    "lint": "solium -d contracts/",
    "migrate": "run-with-testrpc 'truffle migrate'",
    "test": "run-with-testrpc 'truffle test'",
    "testrpc": "ganache-cli"
  },
  "dependencies": {
    "truffle": "^4.0.4",
    "zeppelin-solidity": "^1.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.23.0",
    "bignumber.js": "^6.0.0",
    "coveralls": "^3.0.0",    
    "ganache-cli": "v6.1.0-beta.0",
    "run-with-testrpc": "^0.3.0",
    "solidity-coverage": "^0.4.3",
    "solium": "^1.1.2"
  }
}
